@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar confirmação por e-mail";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <div>@TempData["MensagemSucesso"]</div>
        <button type="button" class="btn-close close-alert" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <div>@TempData["MensagemErro"]</div>
        <button type="button" class="btn-close close-alert" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@*<div asp-validation-summary="All" class="text-danger" role="alert"></div>
*@

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="nome@examplo.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reenviar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
